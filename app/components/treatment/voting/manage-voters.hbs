<Treatment::Voting::VoterTable @manageVotes={{this.manageVotes}} />

{{#if this.editStemming.stemming.geheim}}
<div class="au-u-margin-top au-u-margin-bottom">
  <AuHeading @level="4" @skin="5">{{t "votingManageVoting.subtitle"}}</AuHeading>
  <div class="au-o-grid">
    <div class="au-o-grid__item au-u-1-3">
      <AuLabel for="amount-pro">
        {{t "votingModal.aantalVoorstandersLabel"}}
      </AuLabel>
      <Input id="amount-pro" class="au-c-input au-c-input--block" @placeholder="0" @type="number"
        @value={{this.editStemming.stemming.aantalVoorstanders}} @min={{0}}
        @disabled={{not this.editStemming.stemming.geheim}} />
    </div>
    <div class="au-o-grid__item au-u-1-3">
      <AuLabel for="amount-con">
        {{t "votingModal.aantalTegenstandersLabel"}}
      </AuLabel>
      <Input id="amount-con" class="au-c-input au-c-input--block" @placeholder="0" @type="number"
        @value={{this.editStemming.stemming.aantalTegenstanders}} @min={{0}}
        @disabled={{not this.editStemming.stemming.geheim}} />
    </div>
    <div class="au-o-grid__item au-u-1-3">
      <AuLabel for="amount-none">
        {{t "votingModal.aantalOnthoudersLabel"}}
      </AuLabel>
      <Input id="amount-none" class="au-c-input au-c-input--block" @placeholder="0" @type="number"
        @value={{this.editStemming.stemming.aantalOnthouders}} @min={{0}}
        @disabled={{not this.editStemming.stemming.geheim}} />
    </div>
  </div>
</div>
{{else}}

<AuButtonGroup class="au-u-margin-top-small au-c-button-group-fix">
  <AuButton
    @icon="check"
    @iconAlignment="left"
    @skin="secondary"
    {{on "click" this.editStemming.setUnaniemVoorstander}}>{{t "votingManageVoting.setUnaniemVoorstanderButton"}}
  </AuButton>

  <AuButton
    @icon="cross"
    @iconAlignment="left"
    @skin="secondary"
    {{on "click" this.editStemming.setUnaniemTegenstander}}>{{t "votingManageVoting.setUnaniemTegenstanderButton"}}
  </AuButton>

  <AuButton
    @icon="user"
    @iconAlignment="left"
    @skin="secondary"
    {{on "click" this.editStemming.setUnaniemOnthouder}}>{{t "votingManageVoting.setUnaniemOnthouderButton"}}
  </AuButton>
</AuButtonGroup>

{{/if}}