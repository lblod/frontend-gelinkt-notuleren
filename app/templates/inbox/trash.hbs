{{page-title (t "inbox.trash.pageTitle")}}
<AuDataTable @content={{this.model}}
             @isLoading={{this.isLoadingModel}}
             @noDataMessage={{t 'inbox.trash.noDataMessage'}}
             @sort={{this.sort}}
             @page={{this.page}}
             @size={{this.pageSize}} as |table|>
   <table.menu as |menu|>
    <menu.general>
      <AuToolbar class="au-o-box" @size="large" as |Group|>
        <Group>
          <AuHeading @skin="2">
            {{t 'inbox.trash.pageTitle'}}
          </AuHeading>
        </Group>
        <Group class="au-c-toolbar__group--center">
          <AuDataTableTextSearch @wait={{2000}} @filter={{this.title}} @placeholder={{t 'inbox.trash.searchPlaceholder'}} />
        </Group>
      </AuToolbar>
    </menu.general>
    <menu.selected as |selection datatable|>
      <AuToolbar @size="large" class="au-u-padding-bottom-none" as |Group|>
        <Group class="au-c-toolbar__group--center">
          <AuHeading @skin="2">
           {{t 'inbox.trash.pageTitle'}}
          </AuHeading>
        </Group>
        <Group class="au-c-toolbar__group--center">
          <AuDataTableTextSearch @wait={{2000}} @filter={{this.title}} @placeholder={{t 'inbox.trash.searchPlaceholder'}} />
        </Group>
      </AuToolbar>
      <AuToolbar @size="large" as |Group|>
        <Group data-table-action>
          <AuButton @skin="secondary" {{on "click" (fn this.moveToConcepts selection datatable)}}>
            <AuIcon @icon="redo" @alignment="left" />
            {{t 'inbox.trash.restoreMessage'}}
          </AuButton>
        </Group>
      </AuToolbar>
    </menu.selected>
   </table.menu>
   <table.content as |c|>
    <c.header>
      <AuDataTableThSortable @field=":no-case:currentVersion.title" @currentSorting={{this.sort}} @label="Titel" />
      <AuDataTableThSortable @field="currentVersion.createdOn" @currentSorting={{this.sort}} @label="Aangemaakt" />
      <AuDataTableThSortable @field="currentVersion.updatedOn" @currentSorting={{this.sort}} @label="Aangepast" />
    </c.header>
    <c.body as |container|>
      {{#let container.currentVersion as |row|}}
        <td>{{row.title}}</td>
        <td>{{human-friendly-date row.updatedOn}}</td>
        <td>{{human-friendly-date row.createdOn}}</td>
      {{/let}}
    </c.body>
  </table.content>
</AuDataTable>

