<div class='au-o-grid au-o-grid--tiny'>
  <div class='au-o-grid__item au-u-3-5'>
    {{#let (unique-id) as |id|}}
      <AuLabel for={{id}}>{{t 'date-time-picker.date'}}</AuLabel>
      <AuDatePicker
        @alignment={{@alignment}}
        @id={{id}}
        @onChange={{this.onChangeDate}}
        @value={{this.date}}
        @localization={{this.datePickerLocalization}}
      />
    {{/let}}
  </div>
  <div class='au-o-grid__item au-u-2-5 au-u-2-6@small'>
    <AuTimePicker
      @hoursLabel={{t 'date-time-picker.hours'}}
      @minutesLabel={{t 'date-time-picker.minutes'}}
      @nowLabel={{t 'date-plugin.card.now'}}
      @hours={{this.hours}}
      @minutes={{this.minutes}}
      @showSeconds={{false}}
      @showNow={{false}}
      @onChange={{this.onChangeTime}}
    />
  </div>
</div>