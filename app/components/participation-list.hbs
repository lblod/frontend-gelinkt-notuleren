<Common::MeetingSubSection @title={{t 'participation-list.block-title'}}>
  <:body>
    <Common::DetailsList @items={{this.detailsListItems}} />
  </:body>

  <:button>
    {{#unless @readOnly}}
      <AuButton
        @skin='secondary'
        @icon='pencil'
        @iconAlignment='left'
        {{on 'click' this.togglePopup}}
        class='au-u-margin-top-small au-u-hide-on-print'
      >
        {{@modalTitle}}
      </AuButton>
    {{/unless}}
    {{#if (and @readOnly @readOnlyText)}}
      <AuButton
        @skin='secondary'
        @icon='cross'
        @iconAlignment='left'
        class='au-u-margin-top-small au-u-hide-on-print'
        @disabled={{true}}
      >
        {{@readOnlyText}}
      </AuButton>
    {{/if}}
  </:button>
</Common::MeetingSubSection>

<ParticipationList::Modal
  @chairman={{this.defaultedChairman}}
  @secretary={{this.defaultedSecretary}}
  @participants={{this.defaultedParticipants}}
  @absentees={{this.defaultedAbsentees}}
  @possibleParticipants={{@possibleParticipants}}
  @show={{this.popup}}
  @onCloseModal={{this.togglePopup}}
  @onSave={{@onSave}}
  @bestuursorgaan={{@bestuursorgaan}}
  @meeting={{@meeting}}
/>