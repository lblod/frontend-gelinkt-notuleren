{{#wu-modal
    title=(t "manageAgendaZittingModal.modalTitle")
    dialog-class="modal-dialog--wide modal-dialog--sectioned"
    onClose=@cancel
    as |m|
}}
  {{#m.content isSectioned=true}}
    {{#if this.isEditing}}
      <Agenda::Edit @afterSave={{@afterSave}} @agendapunt={{this.currentlyEditing}} @toggleEditing={{this.toggleEditing}} @agendapunten={{@agendapunten}} @zitting={{@zitting}}/>
    {{else}}
      <Agenda::List @agendapunten={{@agendapunten}} @createAgendapunt={{this.createAgendapunt}} @onSort={{@afterSave}} @edit={{this.edit}} @zitting={{@zitting}}/>
    {{/if}}
  {{/m.content}}

  <div class="modal-dialog__footer">
    {{#if this.isEditing}}
      {{#wu-button-group}}
        {{wu-button label=(t "manageAgendaZittingModal.saveButton") class="button button--narrow" onClick=this.save}}
        {{wu-button label=(t "manageAgendaZittingModal.cancelEditingButton") class="button button--alt button--narrow" onClick=this.toggleEditing}}
      {{/wu-button-group}}
    {{else}}
      {{#wu-button-group}}
        {{wu-button label=(t "manageAgendaZittingModal.cancelButton") class="button button--alt button--narrow" onClick=@cancel}}
      {{/wu-button-group}}
    {{/if}}
  </div>
{{/wu-modal}}