<form class='au-o-flow'>
  <div>
    {{#let (unique-id) as |id|}}
      <AuLabel @error={{@invalidTitle}} for={{id}}>
        {{t 'document-creator.title-field'}}
        <RequiredField />
      </AuLabel>
      <AuTextarea
        @error={{@invalidTitle}}
        @width='block'
        type='text'
        value={{@title}}
        id={{id}}
        {{on 'blur' @updateTitle}}
        {{on 'input' @updateTitle}}
      />
    {{/let}}
  </div>
  <div>
    {{#let (unique-id) as |id|}}
      <AuLabel @error={{@invalidTemplate}} for={{id}}>
        {{t 'document-creator.template'}}
        <RequiredField />
      </AuLabel>
      <PowerSelect
        class={{if @invalidTemplate 'u-c-input au-c-input--error'}}
        @options={{@options}}
        @selected={{@selectedTemplate}}
        @onChange={{@onSelectTemplate}}
        @searchEnabled={{true}}
        @searchField='title'
        as |option|
      >
        {{option.title}}
      </PowerSelect>
    {{/let}}
  </div>
</form>