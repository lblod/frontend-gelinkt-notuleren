<AuMainHeader @homeRoute="index" @appTitle="Gelinkt Notuleren" @contactRoute="contact">
  <AuDropdown @dropdownTitle="{{this.currentSession._user.voornaam}} {{this.currentSession._user.achternaam}} - {{this.currentSession._group.classificatie.label}} {{this.currentSession._group.naam}}" @dropdownButtonLabel="Account settings" @alignment="right">
    <AcmidmLogout @class="au-c-button au-c-button--tertiary" role="menuitem">
      <AuIcon @icon="logout" @alignment="left" />Afmelden
    </AcmidmLogout>
  </AuDropdown>
</AuMainHeader>

<main id="main" class="au-c-main-container" tabindex="-1">
  <div class="au-c-main-container__sidebar au-u-hide-on-print">
    <div class="au-c-sidebar">
      <div class="au-c-sidebar__content">
        <nav>
          <ul class="au-c-list-navigation">
            <li class="au-c-list-navigation__item">
              <AuNavigationLink @linkRoute="inbox.meetings">
                <AuIcon @icon="documents" @alignment="left" />
                {{t "inbox.menu.meetings"}}
              </AuNavigationLink>
            </li>
            <li class="au-c-list-navigation__item">
              <AuNavigationLink @linkRoute="inbox.agendapoints">
                <AuIcon @icon="draft" @alignment="left" />
                {{t "inbox.menu.agendapoints"}}
              </AuNavigationLink>
            </li>
            <li class="au-c-list-navigation__item">
              <AuNavigationLink @linkRoute="inbox.trash">
                <AuIcon @icon="bin" @alignment="left" />
                {{t "inbox.menu.trash"}}
              </AuNavigationLink>
            </li>
          </ul>
        </nav>
      </div>
      <div class="au-c-sidebar__footer">
        <a href="https://abb-vlaanderen.gitbook.io/gelinkt-notuleren-handleiding/" target="_blank" rel="noopener noreferrer" class="au-c-link au-c-link--secondary au-c-link--icon">
          <AuIcon @icon="manual" @alignment="left" />
          {{t "inbox.menu.manual"}}
        </a>
      </div>
    </div>
  </div>
  <div id="content" class="au-c-main-container__content au-u-wide-on-print" tabindex="-1">
    {{outlet}}
  </div>
</main>
