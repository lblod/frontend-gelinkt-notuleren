<AuDataTable @content={{this.model}} @noDataMessage={{t "publish.noExcerptsMessage"}}
             @sort={{this.sort}}
             @page={{this.page}}
             @size={{this.size}}
             @class="container-flex--contain" as |table|>
  <table.menu as |menu|>
    <menu.general>
      <AuToolbar @size="large">
        <AuToolbarGroup>
          <AuHeading @skin="2">
            {{t "publish.excerpts"}}
          </AuHeading>
        </AuToolbarGroup>
        <AuToolbarGroup class="au-u-hide-on-print">
          <TextSearch @wait={{2000}} @filter={{this.title}} @placeholder={{t 'inbox.agendapoints.searchPlaceholder'}} />
        </AuToolbarGroup>
      </AuToolbar>
    </menu.general>
  </table.menu>
  <table.content as |c|>
    <c.header>
      <AuDataTableThSortable @field="position" @currentSorting={{this.sort}} @label={{t 'publish.position'}} />
      <AuDataTableThSortable @field="titel" @currentSorting={{this.sort}} @label={{t 'publish.agendapoint'}} />
      <AuDataTableThSortable @field="behandeling.documentContainer.status" @currentSorting={{this.sort}} @label={{t 'publish.statusLabel'}} />
      <th></th>
    </c.header>

    <c.body as  |agendapoint|>
      <td>{{inc agendapoint.position}}</td>
      <td><AuLink @route="meetings.publish.uittreksels.show" @model={{agendapoint.behandeling.id}}>{{agendapoint.titel}}</AuLink></td>
      <td>
        <Signatures::PublicationStatus @versionedResource={{agendapoint.behandeling.versionedBehandeling}} />
      </td>
      <td class="au-u-text-right"><AuLink @route="meetings.publish.uittreksels.show" @model={{agendapoint.behandeling.id}} @skin="button" @icon="arrow-right" @iconAlignment="right" class="au-u-hide-on-print">{{t 'publish.publishButtonLabel'}}</AuLink></td>
    </c.body>
  </table.content>
</AuDataTable>
