<div class="au-o-box au-u-padding-top-small au-u-padding-bottom-small au-c-editor-preview-treatment-toggle-box">
  <AuToggleSwitch @label={{t "publish.toggleAllPublicLabel"}} @checked={{@allBehandelingPublic}} @onChange={{@toggleAll}} />
</div>
{{#each @prepublishedBehandelingen as |preview|}}
  {{#let (includes preview.behandeling @publicBehandelingUris) as |isPublicBehandeling|}}
    <div class="au-c-editor-preview-treatment {{if isPublicBehandeling "au-c-editor-preview-treatment--public" "au-c-editor-preview-treatment--private"}}">
      <div class="au-o-box au-c-editor-preview-treatment__info {{if isPublicBehandeling "au-c-editor-preview-treatment__info--public" "au-c-editor-preview-treatment__info--private"}} ">
        {{#if this.isPublished}}
          {{#if isPublicBehandeling}}
            <p><strong>Inhoud werd gepubliceerd</strong></p>
            <p class="au-c-help-text au-c-help-text--normal">Alle informatie uit de behandeling van het agendapunt werd gepubliceerd.</p>
          {{else}}
            <p><strong>Inhoud werd niet gepubliceerd</strong></p>
            <p class="au-c-help-text au-c-help-text--normal">De titel en de openbaarheid van de behandeling worden wel gepubliceerd. Voor besluiten worden ook de titel van het besluit en de korte omschrijving gepubliceerd.</p>
          {{/if}}
        {{else}}
          <AuToggleSwitch @label="Maak inhoud agendapunt publiek" @checked={{isPublicBehandeling}} @onChange={{fn @toggle preview}} />
          <AuHr />
          {{#if isPublicBehandeling}}
            <p><strong>Inhoud wordt gepubliceerd</strong></p>
            <p class="au-c-help-text au-c-help-text--normal">Alle informatie uit de behandeling van het agendapunt wordt gepubliceerd.</p>
          {{else}}
            <p><strong>Inhoud wordt niet gepubliceerd</strong></p>
            <p class="au-c-help-text au-c-help-text--normal">De titel en de openbaarheid van de behandeling worden wel gepubliceerd. Voor besluiten worden ook de titel van het besluit en de korte omschrijving gepubliceerd.</p>
          {{/if}}
        {{/if}}
      </div>
      {{html-safe preview.content}}
    </div>
  {{/let}}
{{/each}}

{{yield}}
