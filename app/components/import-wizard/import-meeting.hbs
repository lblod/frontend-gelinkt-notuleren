<AuModal 
@modalTitle="Import meeting" 
@modalOpen={{@visible}} 
@closeModal={{@toggleModal}} as |Modal| >
  <Modal.Body>
      {{#if (eq this.step 'selectDocument')}}
        <ImportWizard::Steps::SelectDocument @updateHtml={{this.updateHtml}} />
      {{else if (eq this.step 'previewHtml')}}
        <ImportWizard::Steps::PreviewHtml @html={{this.htmlString}} />
      {{else if (eq this.step 'confirmationForm')}}
        <ImportWizard::Steps::ConfirmationForm @meeting={{this.meeting}} />
      {{/if}}
  </Modal.Body>
    
  <Modal.Footer>
    <AuButtonGroup>
      <AuButton @skin="secondary">Back</AuButton>
      <AuButton @disabled={{not this.readyForNextStep}} {{on "click" this.goToNextStep}} @loading={{this.nextStepButtonLoading}}>
        Next
      </AuButton>
    </AuButtonGroup>
  </Modal.Footer>
</AuModal>