<AuModal
  @modalOpen={{true}}
  @size='fullscreen'
  @title={{t 'meeting-form.sixth-section-title'}}
  @closeModal={{this.closeModal}}
  class='au-c-modal--editor'
  as |Modal|
>
  <Modal.Body>
    <ZittingTextDocumentContainer
      @onEditorInit={{this.initEditor}}
      @saving={{this.saveTextTask.isRunning}}
      @text={{@model.outro}}
    />
  </Modal.Body>
  <Modal.Footer>
    <AuButtonGroup>
      <AuButton
        @skin='naked'
        @disabled={{this.saveTextTask.isRunning}}
        {{on 'click' this.closeModal}}
      >
        {{t 'meetings.edit.cancel'}}
      </AuButton>
    </AuButtonGroup>
    <AuButtonGroup>
      <AuButton
        @skin='secondary'
        {{on 'click' (perform this.saveTextTask)}}
        @disabled={{this.saveTextTask.isRunning}}
      >
        {{t 'meetings.edit.save'}}
      </AuButton>
      <AuButton
        @disabled={{this.saveTextTask.isRunning}}
        {{on 'click' this.saveAndQuit}}
      >
        {{t 'meetings.edit.save-and-quit'}}
      </AuButton>
    </AuButtonGroup>
  </Modal.Footer>
</AuModal>
<ConfirmRouteLeave
  @enabled={{this.dirty}}
  @message={{t 'meetings.edit.confirm-quit-without-saving'}}
/>