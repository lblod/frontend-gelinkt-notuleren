<AuToolbar @nowrap={{true}}>
  <AuToolbarGroup>
    <AuHeading @level="2" @skin="4">{{@title}}</AuHeading>
  </AuToolbarGroup>
  <AuToolbarGroup>
    <AuPill @skin={{this.statusSkin}} class="au-u-margin-left">
      {{this.statusLabel}}
    </AuPill>
  </AuToolbarGroup>
</AuToolbar>
<div class="au-c-editor-preview au-u-margin-top-small au-u-margin-bottom-large">
  {{#if (has-block)}}
    {{yield}}
  {{else}}
    {{html-safe @document}}
  {{/if}}
</div>
