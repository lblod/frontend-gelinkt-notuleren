{{#if (or this.published @readOnly)}}
  <tr>
    <td>
      {{add @item.position 1}}
    </td>
    <td>
      <p>{{limit-content @item.titel 40}}</p>
    </td>
    <td>
      {{if
        @item.geplandOpenbaar
        (t 'manage-agenda-zitting-modal.gepland-openbaar-true-label')
        (t 'manage-agenda-zitting-modal.gepland-openbaar-false-label')
      }}
    </td>
    <td class='au-u-table-right'>
      {{#if this.published}}
        <AuPill @skin='success'>
          {{t 'manage-agenda-zitting-modal.ap-published-msg'}}
        </AuPill>
      {{/if}}
    </td>
  </tr>
{{else}}
  <tr {{sortable-item model=@item}}>
    <td>
      <span class='drag-handle' {{sortable-handle}}>
        <AuIcon @icon='drag' class='au-u-hide-on-print drag-handle__icon' />
        {{add @item.position 1}}
      </span>
    </td>
    <td>
      <AuButton
        @skin='link'
        {{on 'click' @edit}}
        title={{t 'manage-agenda-zitting-modal.edit-item-message'}}
      >
        {{limit-content @item.titel 40}}
      </AuButton>
    </td>
    <td>
      {{if
        @item.geplandOpenbaar
        (t 'manage-agenda-zitting-modal.gepland-openbaar-true-label')
        (t 'manage-agenda-zitting-modal.gepland-openbaar-false-label')
      }}
    </td>
  </tr>
{{/if}}